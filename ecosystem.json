      "user": "ubuntu",
      "host": "52.91.112.204",
      "key": "/Users/akupila/.ssh/AWS.pem",
      "ref"  : "origin/master",
      "repo" : "git@github.com:akupila/pm2-test-deploy.git",
      "path": "/var/www/test",
      "post-deploy": "npm install --production ; pm2 startOrRestart ecosystem.json --env production"
